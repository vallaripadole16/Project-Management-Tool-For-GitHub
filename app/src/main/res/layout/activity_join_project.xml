<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".activities.JoinProjectActivity">


    <TextView
        android:id="@+id/tvProjectCodeLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="5dp"
        android:textSize="16dp"
        android:layout_margin="6dp"
        android:textColor="@color/black"
        android:text="Enter Project Code"
        android:fontFamily="@font/poppins"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/etProjectJoinCode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="@drawable/custom_edittext"
        android:hint="Project Code"
        android:fontFamily="@font/poppins"
        android:padding="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvProjectCodeLabel" />


    <TextView
        android:id="@+id/tvValidationWarning"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="6dp"
        android:textSize="16dp"
        android:layout_margin="6dp"
        android:textColor="@color/red"
        android:text="Warning"
        android:fontFamily="@font/poppins"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/etProjectJoinCode"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        />
    <Button
        android:id="@+id/btnJoinProject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Join Project"
        android:background="@color/charcoal"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvValidationWarning" />

</androidx.constraintlayout.widget.ConstraintLayout>