<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CreateProjectActivity">

    <TextView
        android:id="@+id/tvProjectNameCreateProject"
        android:layout_width="0dp"
        android:text="Project Name"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:layout_margin="6dp"
        android:fontFamily="@font/poppins"

        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etProjectNameCreateProject"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="@drawable/custom_edittext"
        android:hint="Project Name"
        android:fontFamily="@font/poppins"

        android:padding="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvProjectNameCreateProject" />

    <TextView
        android:id="@+id/tvProjectDescriptionCreateProject"
        android:layout_width="0dp"
        android:text="Project Description"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:fontFamily="@font/poppins"

        android:layout_margin="6dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/etProjectNameCreateProject"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etProjectDescriptionCreateProject"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:fontFamily="@font/poppins"

        android:background="@drawable/custom_edittext"
        android:hint="Project Description"
        android:padding="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvProjectDescriptionCreateProject" />

    <TextView
        android:id="@+id/tvGitHubCreateProject"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:fontFamily="@font/poppins"
        android:text="Project Git Hub Url"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etProjectDescriptionCreateProject" />

    <EditText
        android:id="@+id/etGithubUrlCreateProject"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="@drawable/custom_edittext"
        android:hint="Project Git Hub Url"
        android:fontFamily="@font/poppins"

        android:padding="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvGitHubCreateProject" />

    <Button
        android:id="@+id/btnCreateProject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/custom_button"
        android:text="Create Project"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etGithubUrlCreateProject" />
</androidx.constraintlayout.widget.ConstraintLayout>