<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
       <KeyFrameSet>
           <KeyAttribute
               motion:motionTarget="@+id/projectDescriptionProjectActivity"
               motion:framePosition="100"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/projectDescriptionProjectActivity"
               motion:framePosition="50"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/projectGithubRepo"
               motion:framePosition="100"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/projectGithubRepo"
               motion:framePosition="50"
               android:alpha="0.0" />
       </KeyFrameSet>
        <OnSwipe
            motion:touchAnchorId="@+id/projectGithubRepo"
            motion:touchAnchorSide="bottom" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@id/projectDescriptionProjectActivity"
            motion:layout_constraintHorizontal_bias="0.5"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="0dp"
            android:id="@+id/projectGithubRepo"
            android:visibility="gone" />
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@id/projectNameProjectActivity"
            motion:layout_constraintHorizontal_bias="0.5"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="0dp"
            android:id="@+id/projectDescriptionProjectActivity"
            android:visibility="gone" />
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintHorizontal_bias="0.5"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="0dp"
            android:id="@+id/projectNameProjectActivity" />
    </ConstraintSet>
</MotionScene>